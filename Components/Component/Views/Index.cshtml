@using Components.Component.ViewModels;
@using Components.Icon;
@using Components.Common;
@model ExampleViewModel

@{
    Layout = "_Default";
}

<ul class="nav nav-pills" id="myTab" role="tablist">
    <li class="nav-item" role="presentation">
        <button class="nav-link active" id="main-tab" data-bs-toggle="tab" data-bs-target="#main-pane" type="button" role="tab" aria-controls="main-pane" aria-selected="true">
            @await Html.PartialAsync("~/Icon/Views/Index.cshtml", new IconViewModel() {
                Icon = "eye",
                Color = ColorEnum.Dark,
                IsSolid = false
            }) &nbsp;
            Overview
        </button>
    </li>
    <li class="nav-item" role="presentation">
        <button class="nav-link" id="main-tab" data-bs-toggle="tab" data-bs-target="#example-pane" type="button" role="tab" aria-controls="example-pane" aria-selected="true">
            @await Html.PartialAsync("~/Icon/Views/Index.cshtml", new IconViewModel()
       {
           Icon = "image",
           Color = ColorEnum.Dark,
           IsSolid = false
       }) &nbsp;
            Examples
        </button>
    </li>
    <li class="nav-item" role="presentation">
        <button class="nav-link" id="info-tab" data-bs-toggle="tab" data-bs-target="#info-pane" type="button" role="tab" aria-controls="info-pane" aria-selected="false">
            @await Html.PartialAsync("~/Icon/Views/Index.cshtml", new IconViewModel() {
            Icon = "gear",
            Color = ColorEnum.Dark,
            IsSolid = true 
            }) &nbsp;
            Demo
        </button>
    </li>
</ul>
<div class="tab-content" id="myTabContent">
    <div class="tab-pane fade show active bd-example" id="main-pane" role="tabpanel" aria-labelledby="main-tab" tabindex="0">
        <br />
        @await Html.PartialAsync("~/Component/Views/_Main.cshtml", Model)
    </div>
    <div class="tab-pane fade" id="example-pane" role="tabpanel" aria-labelledby="example-tab" tabindex="0">
        <br />
        @await Html.PartialAsync("~/Component/Views/_Examples.cshtml", Model)
    </div>
    <div class="tab-pane fade" id="info-pane" role="tabpanel" aria-labelledby="info-tab" tabindex="0">
        <br />
        @await Html.PartialAsync("~/Component/Views/_Info.cshtml", Model)
    </div>
</div>

<script>
    window.Prism = window.Prism || {};
    Prism.disableWorkerMessageHandler = true;
</script>